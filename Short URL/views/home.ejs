<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <h1>Generate short url</h1>
    <% if (locals.id) { %>
      <p>URL generated: http://localhost:8000/url/<%= id %> </p>
    <% } %>
    <form method="post" action="/url">
        <input type="text" name="url" placeholder="https://www.google.com">
        <button type="submit">Generate</button>
    </form>
    <div>
      <% if (locals.urls) { %>
        <table>
          <thead>
            <th>Sr. no</th>
            <th>ShortID</th>
            <th>Redirects</th>
            <th>Total clicks</th>
          </thead>
          <tbody>
            <% urls.forEach( (url,index) => { %>
              <td><%= index+1%></td>
              <td><%= url.shortID%></td>
              <td><%= url.redirectURL%></td>
              <td><%= url.totalReq%></td>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>
  </body>
</html>
